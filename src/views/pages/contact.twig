{% extends "/base.twig" %}

{% block title %}
	Contact
{% endblock %}

{% block styles %}
	<link rel="stylesheet" href="/css/headerFooter.css">
	<link rel="stylesheet" href="/css/contact.css">
{% endblock %}

{% block header %}
	{% include "/layouts/header.twig" %}
{% endblock %}

{% block content %}
	<div id="radius-shape-1"></div>
	<div id="radius-shape-2"></div>

	<div class="contact-form">
		<section class="form-container">
			<article class="left-section">
				<form class="form-box">
					<div class="form-wrapper">
						<div class="mobile-text">
							<h1 class="title">Contactez-nous</h1>
							<h2 class="subtitle">Nous sommes ravis de vous entendre. Merci de remplir le formulaire ci-dessous :</h2>
						</div>
						<div class="form-section">
							<div class="input-field">
								<label class="input-title" for="Nom">Nom</label>
								<input class="input" type="text" id="Nom" name="Nom" placeholder="Entrez votre nom ..." required>
							</div>
							<div class="input-field">
								<label class="input-title" for="Email">Email</label>
								<input class="input" type="email" id="Email" name="Email" placeholder="Entrez votre adresse email ..." required>
							</div>
							<div class="input-field">
								<label class="input-title" for="NumeroTelephone">Numéro de téléphone</label>
								<input class="input" type="tel" id="NumeroTelephone" name="NumeroTelephone" placeholder="Entrez votre numéro de téléphone ..." required>
							</div>
							<div class="input-field">
								<label class="input-title" for="Message">Message</label>
								<textarea class="text-input" id="Message" placeholder="Entrez votre message ..." required></textarea>
							</div>
						</div>
						<button class="submit-btn" type="submit">Envoyer</button>
					</div>
				</form>
			</article>
			<aside class="right-section">
				<div class="contact-info">
					<div class="map-section">
						<h1 class="title">Nous joindre</h1>
						<h2 class="subtitle">N'hésitez pas à nous contacter pour toute question ou demande :</h2>
						<div class="social-icons">
							<a class="social-icon" href="#" aria-label="Twitter">
								<i class="fab fa-twitter"></i>
							</a>
							<a class="social-icon" href="#" aria-label="Facebook">
								<i class="fab fa-facebook-f"></i>
							</a>
							<a class="social-icon" href="#" aria-label="LinkedIn">
								<i class="fab fa-linkedin-in"></i>
							</a>
							<a class="social-icon" href="#" aria-label="Instagram">
								<i class="fab fa-instagram"></i>
							</a>
						</div>
						<div class="map-box">
							<iframe id='iframe-maps' src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d11618.777434853168!2d5.61425675!3d43.278778599999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1690361393061!5m2!1sfr!2sfr" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
						</div>
					</div>
				</div>
			</aside>
		</section>
	</div>


{% endblock %}

{% block footer %}
	{% include "/layouts/footer.twig" %}
{% endblock %}

{% block scripts %}
	<script src="/js/headerFooter.js"></script>
{% endblock %}

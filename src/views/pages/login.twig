{% extends "/base.twig" %}

{% block title %}Connexion
{% endblock %}

{% block styles %}<link rel="stylesheet" href="/css/register.css">
	<link rel="stylesheet" href="/css/radiusShape.css">
	<link rel="stylesheet" href="/css/header.css">
	<link rel="stylesheet" href="/css/roots.css">
{% endblock %}

{% block header %}
	{% include "/layouts/header.twig" %}
{% endblock %}

{% block content %}
	<div class="container">
		<div id="radius-shape-2"></div>
		<div id="radius-shape-3"></div>
		<form action="/login" method="post" class="register-form">
			<h1 class='register-title'>Connexion</h1>

			<div class="input-field">
				<label for="email">Email</label>
				<input type="email" id="email" name="email" placeholder="Entrez votre email" required value="{{ user.email }}" class="{{ error.email ? 'input-error' : '' }}">
				{% if error.email %}
					<i class="fa fa-exclamation-triangle error-icon"></i>
					<div class="error-message">{{ error.email }}</div>
				{% endif %}
			</div>

			<div class="input-field">
				<label for="password">Mot de passe</label>
				<input type="password" id="password" name="password" placeholder="Entrez un mot de passe" required class="{{ error.password ? 'input-error' : '' }}">
				{% if error.password %}
					<i class="fa fa-exclamation-triangle error-icon"></i>
					<div class="error-message">{{ error.password }}</div>
				{% endif %}
			</div>

			<div class="submit-button">
				<input type="submit" value="Se connecter">
			</div>
			<div class="login-link">
				Pas encore de compte ?
				<a href="/register">Inscrivez-vous</a>
			</div>
		</form>
	</div>
{% endblock %}

{% block footer %}
	{% include "/layouts/footer.twig" %}
{% endblock %}
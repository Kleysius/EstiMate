{% extends "/base.twig" %}

{% block title %}EstiMate
{% endblock %}

{% block styles %}
	<link rel="stylesheet" href="/css/home.css">
	<link rel="stylesheet" href="/css/headerFooter.css">
{% endblock %}

{% block header %}
	{% include "/layouts/header.twig" %}
{% endblock %}

{% block content %}
	<div class="logo-wall">
		<img src="/img/logoestimate.svg" alt="logo">
	</div>

	<div class="overlay-container">
		<div class="overlay-content">

			<h1 class="overlay-title">Bienvenue sur
				<span class="text-gradient">EstiMate</span>, votre outil d'estimation pour projets web ou mobile !
			</h1>

			<p class="overlay-description">
				EstiMate vous offre une interface simple et intuitive pour estimer le coût de développement de votre site web ou application mobile. Déterminez votre budget en quelques clics grâce à notre outil et prenez une décision éclairée pour votre projet.<br>
				<strong>Commencez dès maintenant et obtenez une estimation précise de vos besoins.</strong>
			</p>

			<div class="overlay-buttons">
				<a href="/register" class="overlay-button overlay-button-transparent">
					Démarrer l'estimation
				</a>
				<a href="/register" class="overlay-button">
					S'inscrire gratuitement
				</a>
			</div>

		</div>
	</div>

	{% include "/layouts/cookie-popup.twig" %}
{% endblock %}


{% block footer %}
	{% include "/layouts/footer.twig" %}
{% endblock %}

{% block scripts %}
	<script type="module" src="/js/home.js"></script>
	<script src="/js/headerFooter.js"></script>
{% endblock %}

